@model AirbnbPricePred.WebApp.Models.RentalRequest
@{
    ViewData["Title"] = "Enter data";
}

<form method="post" class="row g-3">
    <div class="col-md-4">
        <label class="form-label">Neighbourhood group</label>
        <input asp-for="NeighbourhoodGroup" class="form-control" />
    </div>

    <div class="col-md-4">
        <label class="form-label">Neighbourhood</label>
        <input asp-for="Neighbourhood" class="form-control" />
    </div>

    <div class="col-md-4">
        <label class="form-label">Room type</label>
        <input asp-for="RoomType" class="form-control" />
    </div>

    <div class="col-md-2">
        <label class="form-label">Minimum nights</label>
        <input asp-for="MinimumNights" class="form-control" type="number" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Number of reviews</label>
        <input asp-for="NumberOfReviews" class="form-control" type="number" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Date of last review</label>
        <input asp-for="LastReviewDate" class="form-control" type="datetime" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Number of reviews per month</label>
        <input asp-for="ReviewsPerMonth" class="form-control" type="number" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Get prediction</button>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</form>