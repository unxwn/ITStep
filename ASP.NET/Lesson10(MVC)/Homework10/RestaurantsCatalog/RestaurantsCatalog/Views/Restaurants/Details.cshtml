@model RestaurantsCatalog.Models.Restaurant
@{
    ViewData["Title"] = "Деталі ресторану";
}

<h2 class="mt-3">@Model.Name</h2>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Опис</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Адреса</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Телефон</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Час роботи</dt>
            <dd class="col-sm-9">@Model.WorkingHours</dd>

            <dt class="col-sm-3">Категорія</dt>
            <dd class="col-sm-9">@Model.Category.Name</dd>
        </dl>
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
