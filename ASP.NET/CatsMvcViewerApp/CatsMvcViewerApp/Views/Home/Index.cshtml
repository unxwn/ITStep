@{
    ViewBag.Title = "Коти";
}
<form method="get" asp-action="Index">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label class="col-form-label">Порода:</label>
        </div>
        <div class="col-auto">
            <select asp-for="BreedId" asp-items="Model.Breeds"
            class="form-select">
                <option value="0">Всі</option>
            </select>
        </div>
        <div class="col-auto">
            <label class="col-form-label">Ім'я:</label>
        </div>
        <div class="col-auto">
            <input type="text" asp-for="Search" class="form-control"/>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-secondary">Знайти</button>
        </div>
    </div>
</form>
<div class="container mt-3">
    <div class="row row-cols-2">
        @foreach(CatDTO catDTO in Model.Cats)
        {
            <div class="col">
                <div class="card mb-3">
                    <img src="data:image/*;base64,@(Convert.ToBase64String(catDTO.ImagePath!))" class="card-img-top" alt="@catDTO.Name">
                    <div class="card-body">
                        <h5 class="card-title">@catDTO.Name</h5>
                        <p class="card-text">@catDTO.Breed!.BreedName</p>
                        <p class="card-text"><small class="text-body-secondary">@catDTO.Gender.ToString()</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>