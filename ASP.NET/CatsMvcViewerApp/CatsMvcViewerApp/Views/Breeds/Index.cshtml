@using CatsMvcViewerApp.Models
@model List<Breed>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Перелік порід</h1>
@if (Model is null || Model.Count == 0)
{
    <h2>Породи відсутні</h2>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Назва породи</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(Breed breed in Model)
            {
                <tr>
                    <td>@breed.Id</td>
                    <td>@breed.BreedName</td>
                    <td>
                        <a asp-action="details" asp-route-id="@breed.Id">Details</a> |
                        <a asp-action="edit" asp-route-id="@breed.Id">Edit</a> | 
                        <a asp-action="delete" asp-route-id="@breed.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}