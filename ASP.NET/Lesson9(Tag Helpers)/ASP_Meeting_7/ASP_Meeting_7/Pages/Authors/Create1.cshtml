}
<div class="container">
    @if (HttpContext.Request.Method == "POST" && Model.Author is not null)
    {
        <h2>@(Model.Author.Id). @Model.Author.Firstname @Model.Author.Surname</h2>
        <h4>Ваш рік народження: @Model.Author.YearOfBirth</h4>
    }
    @* @if (Model.ErrorMessages is not null)
    {
        <div class="alert alert-danger" role="alert">
