@page "{id}"
@model ASP_Meeting_7.Pages.Authors.EditModel
@{
}
<div class="container">
<form method="post">
    <input type="hidden" name="Id" value="@Model.Author.Id" />
    <div class="mb-3">
        <label class="form-label" for="fname">Firstname</label>
        <input type="text" name="firstname" id="fname"
               class="form-control" value="@Model.Author.Firstname" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="sname">Surname</label>
        <input type="text" name="surname" id="sname"
                   class="form-control" value="@Model.Author.Surname" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="yearOfBirth">Year of Birth</label>
        <input type="number" name="yearOfBirth" id="yearOfBirth"
                   class="form-control" value="@Model.Author.YearOfBirth"   />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Зберігти</button>
    </div>
</form>
</div>